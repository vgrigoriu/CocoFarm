@{
    ViewBag.Title = "Catalog produse";
}
@model IEnumerable<CocoFarm.Model.Product>

<h2>Catalog produse</h2>
<p>
    @Html.ActionLink("Adaugă produs", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Denumire)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descriere)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.ActionLink("Modifică", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalii", "Details", new { id = item.Id }) |
                @Html.ActionLink("Șterge", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
